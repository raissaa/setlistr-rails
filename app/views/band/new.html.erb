<div class="container" style="padding: 60px 15px 0">
  <div class="page-header">
    <h1>Create a new band</h1>
  </div>

  <p class="lead">
  Tell us the name of your band and what instrument do you play in it.
  </p>

  <%= form_for @band, url: band_index_path do |f| %>
    <div class="form-group form-inline">
      <%= f.label :name %>:
      <%= f.text_field :name, class: 'form-control', id: 'name' %><br/>
    </div>
    <% for contract in @band.contracts %>
      <%= fields_for "band[contract_attributes]", contract do |c| %>
        <div class="form-group form-inline">
          <%= c.label :instrument %>:
          <%= c.collection_select :instrument, @instrument_list, :value, :label, {}, {class: 'form-control', id: 'instrument'}%><br/>
        </div> 
      <% end %>
    <% end %>
  <% end %>
</div>