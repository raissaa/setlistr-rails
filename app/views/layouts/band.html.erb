<div class="container">
  <input type="hidden" id="band-id" value="<%=@band.id%>">
  <div class="row">
      <div class="col-md-2 sidebar text-center">
          <%= link_to @band do %>
            <div class="band_logo">
              <%= render partial: 'band/logo', locals: { band: @band, size: '200' } %>
            </div>
          <% end %>
          <ul class="nav nav-sidebar">
              <hr>
              <li id="nav_setlist"><%= link_to "Setlist", band_setlist_path(@band) %></li>
<!--              <li id="nav_concerts"><%= link_to "Concerts", '#' %></li>
              <li id="nav_concerts"><%= link_to "Rehearsals", '#' %></li>
              <li id="nav_concerts"><%= link_to "Members", '#' %></li>
              <li id="nav_concerts"><%= link_to "Stats", '#' %></li>-->
              <hr>
              <li id="nav_band_details"><%= link_to "Edit Band Details", edit_band_path(@band) %></li>
          </ul>
      </div>
      
      <div class="col-md-9 col-md-offset-1 main">
          <%= yield %>
      </div>
  </div>
</div>
<% end %>
